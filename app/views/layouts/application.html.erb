<!DOCTYPE html>
<html>
<head>
  <title>Home</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              
                <a class="navbar-brand" href="/">Resibo mo. Entry ko.</a>
                

            </div>

            <!-- nav bar links -->
                <div class="navbar-collapse collapse">
                 <ul class="nav navbar-nav">
                  <li ><%= link_to "Register", new_user_registration_path %></li>
                  <li><a href="#">Contact Us</a></li>
                </ul>

                <% if user_signed_in? %>
                  <ul class="nav navbar-nav navbar-right">
                      <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></a></li>
                  </ul>
                <% else %>
                    <form action="/fpw/login" method="post" class="navbar-form navbar-right">
                      {% csrf_token %}
                      <div class="form-group">
                        <input type="text" name="username" placeholder="Username" class="form-control">
                      </div>
                      <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control">
                      </div>
                      <button type="submit" class="btn btn-success">Sign in</button>
                    </form>
                <% end %>
                

              </div><!--/.navbar-collapse -->
            
        </div>
    </div>

    <div class="container">

      <% flash.each do |name, msg| %>
        <% content_tag(:div, msg, class: "alert alert-#{alert}") %>
      <%  end %>

		<%= yield %>

      <hr>

      <footer>
        <p>&copy; Cybernetics IT Consulting 2015</p>
      </footer>

	</div>

	<%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>

	<%= yield :javascript %>

</body>
</html>
