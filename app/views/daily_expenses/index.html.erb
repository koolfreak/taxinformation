<div class="row">

	<div class="col-xs-6 col-md-4">
        <br>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Daily Expense Entry</h3>
            </div>
            <div class="panel-body">

                <form class="form-horizontal" role="form" >

                    <div class="form-group">
                        <label for="dateEntry" class="col-sm-2 control-label">Date</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="dateEntry" value="<%= @initExpenseDate %>" id="dateEntry"  style="width: 150px;" placeholder="Date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="amount" class="col-sm-2 control-label">Amount</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="amount" value="" id="amount"  style="width: 150px;" placeholder="Amount">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="items" class="col-sm-2 control-label">Items</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="items" value="" id="items"   placeholder="Items">
                        </div>
                    </div>

                    <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-primary" id="addDailyExpense">Add</button><span  />
                      <button style="margin-left: 10px;" type="submit" class="btn btn-default" id="exportDailyExpense">Export</button>
                    </div>
                  </div>

                    <div id="alertMessage" class="alert alert-success fade in">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a> <strong>Added Expenses</strong>
                    </div>

                </form>
            </div>
        </div>

    </div><!-- end for daily expense entry -->

    <div class="col-xs-12 col-md-8">
        <br>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>&nbsp;Expense List</h3>
            </div>
            <div class="panel-body">
                <form class="navbar-form navbar-left" role="search" >
                    <div class="form-group">
                        <label for="dateEntryList">Date</label>
                        <input type="text" class="form-control" name="dateEntryList" value="<%= @initExpenseDate %>" id="dateEntryList"  style="width: 150px;" placeholder="Date">
                    </div>
                    <a href="#" id="refreshExpenseList" class="btn btn-default" role="button"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></a></a>
                </form>
                <br/>
                 <table width="100%" class="table table-striped table-bordered" id="dailyExpenseList" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Amount</th>
                            <th></th>
                        </tr>
                     </thead>
                     <tfoot>
                        <tr>
                            <th>Total</th>
                            <th></th>
                            <th></th>
                        </tr>
                     </tfoot>
                 </table>

            </div>
        </div><!-- end for daily expense list -->

</div>

<% content_for :javascript do %>
  <script type="text/javascript">
	$(document).ready(function(){
        $('#alertMessage').hide();
        var dailyExpenses = new DailyExpenses();
        dailyExpenses.documentReady();
    });
  </script>
<% end %>
